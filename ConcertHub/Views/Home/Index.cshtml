@model IEnumerable<Gig>

<ul id="gigs">
	@foreach (var gig in Model)
	{
		<li>
			<div class="date">
				<div class="month">
					@gig.DateTime.ToString("MMM")
				</div>
				<div class="day">
					@gig.DateTime.Day.ToString("d")
				</div>
			</div>
			<div class="details">
				<span class="artist">
					@gig.Artist.Name <button class="btn btn-sm btn-link js-toggle-follow" data-user-id="@gig.ArtistId">Follow</button>
				</span>
				<span class="genre">
					@gig.Genre.Name
				</span>
				<button class="btn btn-sm btn-primary float-right js-toggle-attendance" data-gig-id="@gig.Id">Going?</button>
			</div>
		</li>
	}
</ul>

