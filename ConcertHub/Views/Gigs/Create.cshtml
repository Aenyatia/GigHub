@model GigFormViewModel

<h2>Add a Gig</h2>
<form method="post">
	<div class="form-group">
		<label asp-for="Venue"></label>
		<input type="text" class="form-control" asp-for="Venue" placeholder="Enter venue">
	</div>
	<div class="form-group">
		<label asp-for="Date"></label>
		<input type="date" class="form-control" asp-for="Date">
	</div>
	<div class="form-group">
		<label asp-for="Time"></label>
		<input type="time" class="form-control" asp-for="Time">
	</div>
	<div class="form-group">
		<label asp-for="GenreId">Genre</label>
		<select class="form-control" asp-for="GenreId" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
			<option>Select genre</option>
		</select>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>
