@model IEnumerable<Gig>

<h1>Mine Upcoming Gigs</h1>
<ul id="gigs" class="mt-5">
	@foreach (var gig in Model)
	{
		<li>
			<div class="date">
				<div class="month">
					@gig.DateTime.ToString("MMM")
				</div>
				<div class="day">
					@gig.DateTime.Day.ToString("d")
				</div>
			</div>
			<div class="details">
				<span class="artist">
					@gig.Venue
				</span>
				<span class="genre">
					@gig.Genre.Name
				</span>
				<div class="actions">
					<a asp-controller="Gigs" asp-action="Edit" asp-route-id="@gig.Id">Edit</a>
				</div>
			</div>
		</li>
	}
</ul>
